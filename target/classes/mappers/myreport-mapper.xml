  <insert id="myReportInsert" parameterType="Report2">
  INSERT INTO REPORT
  VALUES(SEQ_RKEY.NEXTVAL, #{u_mid}, #{r_user_id},#{r_type},#{r_contents},SYSDATE,'Y')
  </insert>
  
  <select id="getmychatListCount" resultType="_int">
  SELECT COUNT(*)
  FROM CHATINFO
  WHERE USER_ID=#{user_id}
  </select>
  
  <select id="selectmychatList" resultMap="chatResultMap">
  SELECT *
  FROM CHATINFO
   ORDER BY CHATID ASC
  </select>
  
  <update id="myReportUpdate" parameterType="String">
  UPDATE CHATINFO
  SET STATUS='N'
  WHERE USER_ID=#{user_id}
  </update>
  
  
</mapper>

